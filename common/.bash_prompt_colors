# The various escape codes that we can use to color our prompt.
   COLOR_NONE='\[\033[0m\]'
   COLOR_BOLD='\[\033[1m\]'

# Regular Colors
          RED='\[\033[0;31m\]'
    LIGHT_RED='\[\033[0;91m\]'
   BRIGHT_RED='\[\033[1;31m\]'
        GREEN='\[\033[0;32m\]'
  LIGHT_GREEN='\[\033[0;92m\]'
 BRIGHT_GREEN='\[\033[1;32m\]'
       YELLOW='\[\033[0;33m\]'
 LIGHT_YELLOW='\[\033[0;93m\]'
BRIGHT_YELLOW='\[\033[1;33m\]'
         BLUE='\[\033[0;34m\]'
   LIGHT_BLUE='\[\033[0;94m\]'
  BRIGHT_BLUE='\[\033[1;34m\]'
       PURPLE='\[\033[0;35m\]'
 LIGHT_PURPLE='\[\033[0;95m\]'
BRIGHT_PURPLE='\[\033[1;35m\]'
         CYAN='\[\033[0;36m\]'
   LIGHT_CYAN='\[\033[0;96m\]'
  BRIGHT_CYAN='\[\033[1;36m\]'
        WHITE='\[\033[1;37m\]'
   LIGHT_GRAY='\[\033[0;97m\]'
         GRAY='\[\033[0;37m\]'
    DARK_GRAY='\[\033[0;90m\]'
  DARKER_GRAY='\[\033[1;30m\]'
        BLACK='\[\033[0;30m\]'

# Underline
   UNDER_RED='\[\033[4;31m\]'
 UNDER_GREEN='\[\033[4;32m\]'
UNDER_YELLOW='\[\033[4;33m\]'
  UNDER_BLUE='\[\033[4;34m\]'
UNDER_PURPLE='\[\033[4;35m\]'
  UNDER_CYAN='\[\033[4;36m\]'
 UNDER_WHITE='\[\033[4;37m\]'
 UNDER_BLACK='\[\033[4;30m\]'

# Background
         ON_RED='\[\033[41m\]'
   ON_LIGHT_RED='\[\033[0;101m\]'
       ON_GREEN='\[\033[42m\]'
 ON_LIGHT_GREEN='\[\033[0;102m\]'
      ON_YELLOW='\[\033[43m\]'
ON_LIGHT_YELLOW='\[\033[0;103m\]'
        ON_BLUE='\[\033[44m\]'
  ON_LIGHT_BLUE='\[\033[0;104m\]'
      ON_PURPLE='\[\033[45m\]'
ON_LIGHT_PURPLE='\[\033[0;105m\]'
        ON_CYAN='\[\033[46m\]'
  ON_LIGHT_CYAN='\[\033[0;106m\]'
       ON_WHITE='\[\033[0;107m\]'
        ON_GRAY='\[\033[47m\]'
   ON_DARK_GRAY='\[\033[0;100m\]'
       ON_BLACK='\[\033[40m\]'
